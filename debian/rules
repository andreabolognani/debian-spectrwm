#!/usr/bin/make -f

include /usr/share/quilt/quilt.make

build: patch build-stamp
build-stamp:
	dh_testdir
	dh_prep
	cp -f scrotwm.c linux/
	$(MAKE) -C linux/
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	$(MAKE) -C linux/ clean
	rm -f linux/scrotwm.c
	./debian/rules unpatch
	dh_clean

binary: binary-indep binary-arch
binary-indep: build
binary-arch: build
	dh_testdir
	dh_testroot
	dh_install
	dh_installman scrotwm.1
	dh_installexamples initscreen.sh baraction.sh screenshot.sh
	dh_installchangelogs 
	dh_installdocs
	dh_installman
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

.PHONY: build clean binary-indep binary-arch binary
