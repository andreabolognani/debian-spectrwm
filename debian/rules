#!/usr/bin/make -f

include /usr/share/quilt/quilt.make

build: patch build-stamp
build-stamp:
	dh_testdir
	$(MAKE) -C linux/
	touch $@

clean: clean-patched unpatch
	dh_testdir
	dh_testroot
	dh_clean
clean-patched:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	$(MAKE) -C linux/ clean

binary: binary-indep binary-arch
binary-indep: build
binary-arch: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_install
	dh_installexamples
	dh_installchangelogs 
	dh_installdocs
	dh_installman scrotwm.1
	dh_installwm scrotwm
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

.PHONY: build clean clean-patched binary binary-indep binary-arch
