#!/bin/sh

set -e

if dpkg-maintscript-helper supports mv_conffile; then
	dpkg-maintscript-helper \
		mv_conffile \
			/etc/scrotwm.conf \
			/etc/spectrwm.conf \
		0.11.0-1 \
		scrotwm \
		-- \
		"$@"
fi

# Create compatibility symlink for the config file
if [ "$1" = "configure" ]; then
	ln -s spectrwm.conf /etc/scrotwm.conf
fi

#DEBHELPER#
