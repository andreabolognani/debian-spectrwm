#!/bin/sh

set -e

if dpkg-maintscript-helper supports mv_conffile; then
	dpkg-maintscript-helper \
		mv_conffile \
			/etc/scrotwm.conf \
			/etc/spectrwm.conf \
		0.11.0-1 \
		scrotwm \
		-- \
		"$@"
fi

# Delete compatibility symlink
if test "x${1}" = "xpurge"; then
	rm -f /etc/scrotwm.conf
fi

#DEBHELPER#
