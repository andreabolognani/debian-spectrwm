#!/bin/sh

set -e

# Migrate user changes to the new configuration file
dpkg-maintscript-helper \
	mv_conffile \
		/etc/scrotwm.conf \
		/etc/spectrwm.conf \
	0.11.0-1 \
	scrotwm \
	-- \
	"$@"

# Delete legacy configuration file
if test "x${1}" = "xpurge"; then
	rm -f /etc/scrotwm.conf
fi

#DEBHELPER#
