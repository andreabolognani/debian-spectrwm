Description: Improve Makefile
 Make sure to use all the build flags that can be expected in the
 environment; use the correct variable for each compiler flag.
Author: Andrea Bolognani <eof@kiyuko.org>
Last-Update: 2011-11-10
Index: scrotwm.git/linux/Makefile
===================================================================
--- scrotwm.git.orig/linux/Makefile	2011-11-10 18:17:32.462451938 +0100
+++ scrotwm.git/linux/Makefile	2011-11-10 18:36:25.441948456 +0100
@@ -1,8 +1,8 @@
 # $scrotwm: Makefile,v 1.6 2011/08/10 13:44:36 marco Exp $ 
 
-CFLAGS+= -Wall -ggdb -D_GNU_SOURCE -I.
-CFLAGS+= -DSWM_LIB=\"$(LIBDIR)/libswmhack.so.$(LVERS)\"
-LDADD+= -lX11 -lXrandr -lXtst
+CFLAGS+= -Wall -ggdb -I.
+CPPFLAGS+= -D_GNU_SOURCE -DSWM_LIB=\"$(LIBDIR)/libswmhack.so.$(LVERS)\"
+LIBS+= -lX11 -lXrandr -lXtst
 
 PREFIX?= /usr/local
 BINDIR?= $(PREFIX)/bin
@@ -22,13 +22,13 @@
 	ln -sf ../lib/swm_hack.c
 
 scrotwm: scrotwm.o linux.o
-	$(CC) $(LDFLAGS) -o $@ $+ $(LDADD)
+	$(CC) $(LDFLAGS) $+ -o $@ $(LIBS)
 
 %.so: %.c
-	$(CC) $(CFLAGS) -c -fpic -DPIC $+ -o $@
+	$(CC) $(CFLAGS) $(CPPFLAGS) -c -fpic -DPIC $+ -o $@
 
 libswmhack.so.$(LVERS): swm_hack.so
-	$(CC) -shared -fpic -o libswmhack.so.$(LVERS) swm_hack.so $(LDADD)
+	$(CC) $(LDFLAGS) -shared -fpic $+ -o $@ $(LIBS)
 
 install: all
 	install -m 755 -d $(DESTDIR)$(BINDIR)
